    <div class="row px-xl-5">
            <div class="col-lg-5 pb-5">
                <div id="product-carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner border">
                        <div class="carousel-item active">
                            <img class="w-100 h-100" src="~/File/img/@Model.AnhBia" alt="Image">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-7 pb-5">

                <h3 class="font-weight-semi-bold">Tên sản phẩm: @Html.DisplayFor(model => model.TenSanPham)</h3>
                <h3 class="font-weight-semi-bold">Giá Bán: @Html.FormatValue(@Model.GiaBan, "{0:#,##0}") VNĐ</h3>
                <h3 class="font-weight-semi-bold">Mô Tả:</h3>
                <p class="mb-4">@Html.Raw(Model.MoTa.ToString().Replace("\n", "<br>"))</p>
