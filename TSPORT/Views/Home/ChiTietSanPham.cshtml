@model TSPORT.Models.SANPHAM
@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/Layout2.cshtml";
}
<h2 style="text-align: center;">CHI TIẾT SẢN PHẨM</h2>
