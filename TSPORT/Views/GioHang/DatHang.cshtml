@using TSPORT.Models
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<script>
    // Function to show/hide QR code based on radio button selection
    function toggleQRCodeDisplay() {
        var qrCodeImage = document.getElementById("qrCodeImage");
        var onlinePaymentRadio = document.getElementById("rdoThanhToanOnline");

        if (onlinePaymentRadio.checked) {
            // Lấy nội dung giỏ hàng và tạo URL mã QR dựa trên nó
            var gioHangContent = getCartContent(); // Thay hàm này bằng cách lấy dữ liệu giỏ hàng thực tế
            var qrCodeContent = "momo://transfer?receiver=your_receiver&amount=" + gioHangContent.totalPrice + "&note=" + gioHangContent.cartDescription;

            // Hiển thị mã QR với nội dung của giỏ hàng
            qrCodeImage.style.display = "block";
            qrCodeImage.src = "https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=" + encodeURIComponent(qrCodeContent);
        } else {
            qrCodeImage.style.display = "none";
        }
    }

    // Example function to get cart content (replace this with your actual cart data retrieval)
    function getCartContent() {
        // Example data for demonstration, replace with your real cart data
        return {
            totalPrice: 10000, // Total price
            cartDescription: "Payment for books" // Description of the payment
        };
    }
</script>

<h2 style="text-align:center">THÔNG TIN ĐƠN HÀNG</h2>
<table align="center" border="1">
    <tr style="text-align:center; font-weight:bold;">
        <td>Mã Sản Phẩm</td>
        <td>Tên Sản Phẩm</td>
        <td>Ảnh Bìa</td>
        <td>Số Lượng</td>
        <td>Đơn Giá</td>
        <td>Thành Tiền</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold;">
            <td align="center">@item.iMaSanPham</td>
            <td>@item.sTenSanPham</td>
            <td><img src="~/File/img/@item.sAnhBia" style="width:100px;"></td>
            @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { iMaSanPham = item.iMaSanPham }))
            {
                <td align="center">
                    @item.iSoLuong
                </td>
                <td align="center">@string.Format("{0:#,##0,0}", @item.dDonGia)</td>
                <td align="center">@string.Format("{0:#,##0,0}", @item.dThanhTien)</td>
            }
        </tr>
    }
    <tr>
    <tr>
        <td colspan="3" style="text-align:right; color:red; font-weight:bold; padding-right:5px;">
            Số lượng sản phẩm: @string.Format("{0:#,##0}", @ViewBag.TongSoLuong)
        </td>
        <td colspan="3" style="text-align:center; color:red; font-weight:bold;">
            Tổng tiền: @string.Format("{0:#,##0,0}", @ViewBag.TongTien) VNĐ
        </td>
    </tr>
    <tr style="font-weight:bold; color:blue; text-align:right;">
        <td colspan="9">
            @Html.ActionLink("TRỞ VỀ GIỎ HÀNG", "GioHang", "GioHang")
        </td>
    </tr>
</table>
<h2 style="text-align:center">THÔNG TIN ĐẶT HÀNG</h2>
@{
    KHACHHANG kh = (KHACHHANG)Session["TaiKhoan"];
}
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <table align="center">
        <tr style="height:40px;">
            <td>Họ tên khách hàng:</td>
            <td style="font-weight:bold">@kh.HoTen</td>
        </tr>
        <tr style="height:40px;">
            <td>Địa chỉ:</td>
            <td style="font-weight:bold">@kh.DiaChi</td>
        </tr>
        <tr style="height:40px;">
            <td>Điện thoại:</td>
            <td style="font-weight:bold">@kh.DienThoai</td>
        </tr>
        <tr style="height:40px;">
            <td>Ngày đặt:</td>
            <td style="font-weight:bold">@DateTime.Now.ToShortDateString()</td>
        </tr>
        <tr style="height:40px;">
            <td>Ngày giao:</td>
            <td style="font-weight:bold">
                <input type="date" name="NgayGiao" />
            </td>
        </tr>
        <tr style="height:40px;">
            <td>Hình thức thanh toán:</td>
        </tr>
        <tr style="height:40px;">
            <td>
                <input type="radio" id="rdoThanhToanKhiNhanHang" name="HinhThucThanhToan" value="ThanhToanKhiNhanHang" />
                <label for="rdoThanhToanKhiNhanHang">Thanh toán khi nhận hàng</label>
            </td>
            <td>
                <input type="radio" id="rdoThanhToanOnline" name="HinhThucThanhToan" value="ThanhToanOnline" onclick="toggleQRCodeDisplay()" />
                <label for="rdoThanhToanOnline">Thanh toán online</label>
                <!-- Hiển thị hình mã QR ở đây -->
                <img id="qrCodeImage" style="display: none;" alt="QR Code" />
            </td>
        </tr>
        <tr style="height:40px;">
            <td>
                <a href="/GioHang/PaymentWithPayPal" class="btn btn-block btn-success">THANH TOÁN PAYPAL</a>
            </td>
            <td>
                <input type="submit" class="btn btn-primary" value="ĐẶT HÀNG" />
            </td>
        </tr>
    </table>
}

