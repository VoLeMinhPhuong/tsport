
@{
    ViewBag.Title = "DangNhap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>DangNhap</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Login Form Template" name="keywords">
    <meta content="Login Form Template" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Stylesheet -->
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper login-3">
        <div class="container">
            <div class="col-left">
                <div class="login-text">
                    <h2>WELCOME!!!</h2>
                    <p>
                        Tạo tài khoản cho người mới!!!
                    </p>
                    <a class="btn" href="@Url.Action("DangKy", "User")">ĐĂNG KÝ</a>
                </div>
            </div>
            <div class="col-right">
                <div class="login-form">
                    <h2>ĐĂNG NHẬP</h2>
                    @using (Html.BeginForm("DangNhap", "User"))
                    {
                        @Html.ValidationSummary(true)
                        <form>
                            <p>
                                <input id="TenDN" name="TenDN" type="text" placeholder="Tên tài khoản..." required>
                            </p>
                            <p>
                                <input id="MatKhau" name="MatKhau" type="password" placeholder="Mật khẩu..." required>
                            </p>
                            <p>
                                <input class="btn" type="submit" value="Đăng Nhập" />
                            </p>
                            <p>
                                @*<a href="">Forget password?</a>*@
                                <a href="@Url.Action("ResetPassword", "User")">Quên Mật Khẩu?</a>
                            </p>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>

</body>
</html>

