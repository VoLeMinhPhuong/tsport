@model TSPORT.Models.ForgotPassword
@{
    ViewBag.Title = "DangNhap";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>QuenMatKhau</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Login Form Template" name="keywords">
    <meta content="Login Form Template" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Stylesheet -->
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper login-3">
        <div class="container">
            <div class="col-left">
                <div class="login-text">
                    <h2>WELCOME!!!</h2>
                    <p>
                        Quay về đăng nhập!!!
                    </p>
                    <a class="btn" href="@Url.Action("DangNhap", "User")">ĐĂNG NHẬP</a>
                </div>
            </div>
            <div class="col-right">
                <div class="login-form">
                    <h2>QUÊN MẬT KHẨU</h2>
                    @using (Html.BeginForm("ResetPassword", "User", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true)
                        <form>
                            <p>
                                @Html.LabelFor(m => m.Email)
                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Nhập địa chỉ email của bạn...", required = "required" })
                            </p>
                            <p>
                                <input class="btn" type="submit" value="Gửi Email Đặt Lại Mật Khẩu" />
                            </p>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>

</body>
</html>

