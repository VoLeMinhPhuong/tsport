@model TSPORT.Models.LOAISP

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">CẬP NHẬT DANH MỤC SẢN PHẨM</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Mã Loại:</label>
            <div class="col-md-10">
                @*Chỉ hiển thị mã sách không cho sửa*@
                <input type="text" size="70" name="iMaLoai" value="@Model.MaLoai" readonly />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Tên Loại Sản Phẩm:</label>
            <div class="col-md-10">
                <input type="text" size="70" name="sTenLoai" value="@Model.TenLoai" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LƯU" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("TRỞ VỀ QUẢN LÝ LOẠI SẢN PHẨM", "Index")
</div>
