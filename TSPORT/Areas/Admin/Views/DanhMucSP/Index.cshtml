@model IEnumerable<TSPORT.Models.LOAISP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .table th:first-child,
    .table td:first-child {
        text-align: left;
    }
</style>

<h2 style="text-align:center;">QUẢN LÝ DANH MỤC SẢN PHẨM</h2>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Thêm Mới", "Create")
    </p>
    <table class="table">
        <tr style="text-align:center">
            <th>
                Tên Loại Sản Phẩm
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenLoai)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.MaLoai })" class="btn btn-warning" role="button">Sửa</a>

                    <a href="@Url.Action("Detail", new { id = item.MaLoai })" class="btn btn-primary" role="button">Chi tiết</a>

                    <a href="@Url.Action("Delete", new { id = item.MaLoai })" class="btn btn-danger" role="button">Xóa</a>
                </td>
            </tr>
        }
    </table>
</body>
</html>
